{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "generated/**/*",
    "types/**/*",
    "index.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}