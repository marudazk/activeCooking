{
    "name": "activecooking",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "ui",
        "server",
        "shared"
    ],
    "scripts": {
        "dev:ui": "npm run dev --workspace ui",
        "dev:server": "npm --workspace server run dev",
        "build:ui": "npm --workspace ui run build",
        "build:shared": "npm --workspace shared run build",
        "build:server": "npm --workspace server run build",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "build": "rm -rf node_modules package-lock.json && npm install --include=dev && npm --workspace shared run generate && npm run build:shared && npm run build:server && npm run build:ui"

    },
    "dependencies": {
        "@prisma/client": "^6.14.0",
        "typescript": "^5",
        "@types/cors": "^2.8.19",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/node": "^24.3.0"
    },
    "devDependencies": {
        "prisma": "^6.13.0"
    }
}