{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "ui",
        "server",
        "shared"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}